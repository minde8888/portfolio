{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",        // Pakeista iš commonjs į ESNext
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "Node",   // Užtikrinta, kad būtų didžioji raidė
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "allowJs": true,             // Pridėta
    "declaration": true          // Pridėta dėl .d.ts failų
  },
  "include": ["src/**/*", "out/**/*"],
  "exclude": ["node_modules", "dist"]
}